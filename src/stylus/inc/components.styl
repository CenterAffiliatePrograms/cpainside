.c-wrapper
	r-block()
	position relative
	width 960px
	margin auto

.c-iframe-video
	r-block()
	width 100% !important
	height 100% !important

.c-video
	r-block()
	box-shadow 0px 0px 15px 0px rgba(50, 50, 50, 0.5)
	width 720px
	height 400px
	cursor pointer
	// background url('../../images/main-video.jpg') center center no-repeat
	// background-size cover
	// &--reviews
	// 	background url('../../images/review-video.jpg') center center no-repeat

.c-team-list
	clearfix()
	w = 250px
	h = 45px
	width w * 3
	margin auto
	&__item-wr
		width w
		height 255px
		padding-top 25px
		float left
	&__item-img
		position relative
		width 150px
		height 150px
		margin auto
	&__img
		border-radius 100%
		width 100%
		height 100%
	&__soc
		display block
		position absolute
		right 0
		bottom 0
		text-align center
		height h
		width h
		border-radius 100%
		padding 0
	&__soc-ico
		display inline-block
		line-height h !important
	&__item-info
		text-align center
	&__name
		font-size 18px
		font-weight 700
		margin-bottom 0
	&__staf
		font-size 16px
		margin-top 5px
	
.c-privacy-policy
	ul
		padding-left 20px

.c-iframe-order-bro
	position fixed
	top -500px
	left -500px
	height 0
	overflow hidden

.c-bg-parallax
	display block
	background-color #D6D6D6
	background-position center center
	background-repeat no-repeat
	background-attachment fixed
	background-size cover
	opacity .8

.c-slider-company
	r-block()
	width 850px
	height 60px
	&__item
		padding 0 10px
		outline none
	&__img
		width 100%

.c-first-section
	position relative
	height 1000px
	text-align center
	color #FFF
	r-block()
	osans-700()
	&__wrapper
		@extend .c-wrapper
		padding-top 40px
		z-index 2
	&__h1
		r-block()
		font-size 45px
	&__h2
		r-block()
		font-size 32px
		padding-top 5px
		padding-bottom 25px
	&__slider-p
		r-block()
		font-size 28px
		padding-top 50px
		padding-bottom 20px
	&__down
		r-block()
		margin auto
		cursor pointer
	.c-bg-parallax
		background-image url('../../images/1-bg.jpg')
		pos-a-full()
		z-index 1
	.c-video
		margin 0 auto
	.c-slider-company
		margin auto
		margin-bottom 20px

.c-form-main
	clearfix()
	&__item
		r-block()
		float left
		width 30%
		margin-right 5%
		height 35px
		background-color #FFF
		border 1px solid #ABAAAA
		border-radius 3px
		padding-left 20px
		&_button
			background-color #F48100
			text-align center
			margin-right 0
			border 1px solid #F7921E
			color #FFF
			cursor pointer
			&:hover
				background-color #F7921E
				

.c-form-section
	&__wrapper
		@extend .c-wrapper
		padding 100px 0
		
		