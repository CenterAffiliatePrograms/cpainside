.c-wrapper
	r-block()
	position relative
	width 960px
	margin auto

.c-iframe-video
	r-block()
	width 100% !important
	height 100% !important

.c-video
	r-block()
	background url('../../images/main-video.jpg') center center no-repeat
	background-size cover
	box-shadow 0px 0px 15px 0px rgba(50, 50, 50, 0.5)
	width 720px
	height 400px
	cursor pointer
	&--reviews
		background url('../../images/review-video.jpg') center center no-repeat

.c-button-material
	display block
	font-size 1.5rem
	width 200px

.c-index-header
	r-block()
	text-align center
	padding-bottom 20px

.c-start-form
	margin-top 30px
	&__button
		display block
		float right
		margin-right 10px
	.input-field input:focus + label
		color #ff6f00
	.input-field input:focus
		border-bottom 1px solid #ff6f00
		box-shadow 0 1px 0 0 #ff6f00
	.input-field input.valid
		border-bottom 1px solid #00c853
		box-shadow 0 1px 0 0 #00c853
	.input-field input.invalid
		border-bottom 1px solid #ff5252
		box-shadow 0 1px 0 0 #ff5252
	.input-field .prefix.active
		color #ff6f00

.c-desc-menu
	width 675px
	margin auto

.c-mob-menu
	padding-top 56px

.c-tab
	max-width 900px
	margin auto
	&__content-item
		padding-top 30px

.c-lesson-card
	clearfix()
	&__content
		float left
		width 400px
		text-align left
	&__content-header
		font-size 20px
		margin-bottom 0
	&__content-header-bottom
		font-size 16px
		margin-bottom 0
	&__content-list
		padding-left 30px
		margin-top 5px
	&__icon
		float right
		width 420px
	&__link
		display block
		cursor pointer
	&__img
		display block
		width 100%
		margin-top 30px

.c-scroll-fire
	text-align left
	font-size 18px
	&__item
		position relative
		padding-left 40px
		line-height 28px
		margin-bottom 10px
	&__ico
		position absolute
		top 0
		left 0

.c-team-list
	clearfix()
	w = 250px
	h = 45px
	width w * 3
	margin auto
	&__item-wr
		width w
		height 255px
		padding-top 25px
		float left
	&__item-img
		position relative
		width 150px
		height 150px
		margin auto
	&__img
		border-radius 100%
		width 100%
		height 100%
	&__soc
		display block
		position absolute
		right 0
		bottom 0
		text-align center
		height h
		width h
		border-radius 100%
		padding 0
	&__soc-ico
		display inline-block
		line-height h !important
	&__item-info
		text-align center
	&__name
		font-size 18px
		font-weight 700
		margin-bottom 0
	&__staf
		font-size 16px
		margin-top 5px
	
.c-privacy-policy
	ul
		padding-left 20px

.c-iframe-order-bro
	position fixed
	top -500px
	left -500px
	height 0
	overflow hidden

.c-bg-parallax
	display block
	background-color #D6D6D6
	background-position center center
	background-repeat no-repeat
	background-attachment fixed
	background-size cover
	opacity .8

.c-first-section
	position relative
	height 1000px
	text-align center
	color #FFF
	r-block()
	osans-700()
	&__wrapper
		@extend .c-wrapper
		padding-top 40px
		z-index 2
	&__h1
		r-block()
		font-size 45px
	&__h2
		r-block()
		font-size 32px
		padding-top 5px
		padding-bottom 25px
	&__slider-p
		r-block()
		font-size 28px
		padding-top 50px
		padding-bottom 20px
	&__down
		r-block()
		margin auto
		cursor pointer
	.c-bg-parallax
		background-image url('../../images/1.jpg')
		pos-a-full()
		z-index 1
	.c-video
		margin 0 auto
	.c-slider-company
		r-block()
		background-color #333
		margin auto
		width 850px
		height 60px
		margin-bottom 20px
		
		